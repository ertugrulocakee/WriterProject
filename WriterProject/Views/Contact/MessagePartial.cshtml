
<div class="col-md-3">
    <a href="/Message/NewMessage/" class="btn btn-primary btn-block mb-3">Yeni bir mesaj oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"></h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Contact/Index/" class="nav-link">
                        <i class="fas fa-mail-bulk"></i> Gelen İletişim Mesajları
                        <span class="badge bg-primary float-right">@ViewBag.contactMessagesCount</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/Message/Inbox/" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.messageInboxCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/SendBox" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.messageSendBoxCount</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/Message/RemovedSendMessages/" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu (Giden Mesajlar)
                        <span class="badge bg-danger float-right">@ViewBag.removedSendMessagesCount</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/Contact/RemovedContactMessages/" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu (Gelen İletişim Mesajları)
                        <span class="badge bg-danger float-right">@ViewBag.removedContactMessagesCount</span>
                    </a>
                </li>

            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</div>