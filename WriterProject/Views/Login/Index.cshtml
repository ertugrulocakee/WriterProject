@model Entities.Concrete.Admin


@{

    Layout = null;
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('@ViewBag.Message');
        };
    </script>
}


<!doctype html>
<html lang="en">
<head>
    <title>Giriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login-form-19/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Yazar Projesi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(login-form-19/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoşgeldin!</h3>
                        <p class="text-center">Hadi Giriş Yap!</p>

                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.userName, new { @class = "form-control", @placeholder="Kullanıcı adı" })
                                @Html.ValidationMessageFor(m => m.userName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder="Şifre" })
                                @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş Yap</button>
                            </div>
                        }

                        <div class="form-group d-md-flex">
                            <div class="w-100 text-md-right">
                                <a href="#">Şifreni mi unuttun?</a>
                            </div>
                        </div>

                        <div class="w-100 text-center mt-4 text">
                            <p class="mb-0">Yoksa hesabın yok mu?</p>
                            <a href="#">Hadi o zaman kayıt ol!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/login-form-19/login-form-19/js/jquery.min.js"></script>
    <script src="~/login-form-19/login-form-19/js/popper.js"></script>
    <script src="~/login-form-19/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/login-form-19/login-form-19/js/main.js"></script>

</body>
</html>



