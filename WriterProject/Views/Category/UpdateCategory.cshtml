@model Entities.Concrete.Category

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert('@ViewBag.Message');
        };
    </script>
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Düzenle</h4>
            <br />
            <br />

            @using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
            {

                @Html.HiddenFor(m => m.CategoryID)

                <div class="form-group">
                    <label>Kategori Adı</label>
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Kategori Açıklaması</label>
                    @Html.TextBoxFor(m => m.CategoryDescription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CategoryDescription, "", new { @class = "text-danger" })
                </div>




                <button class="btn btn-success">Düzenle</button>


            }


        </div>
    </div>
</div>

