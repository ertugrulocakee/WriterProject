@model Entities.Concrete.Category


@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Ekle</h4>
            <br/>
            <br/>

            @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
            {


                <div class="form-group">
                    <label>Kategori Adı</label>
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CategoryName,"", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Kategori Açıklaması</label>
                    @Html.TextBoxFor(m => m.CategoryDescription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CategoryDescription,"", new { @class = "text-danger" })
                </div>




                <button class="btn btn-success">Ekle</button>


            }


        </div>
    </div>
</div>

