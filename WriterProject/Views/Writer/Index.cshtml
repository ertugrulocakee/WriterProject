@using Entities.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<!-- Default box -->
<div class="card card-solid">
    <div class="card-body pb-0">
        <div class="row d-flex align-items-stretch">

            @foreach (var item in Model)
            {

            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                <div class="card bg-light">
                    <div class="card-header text-muted border-bottom-0">
                        Yazar
                    </div>
                    <div class="card-body pt-0">
                        <div class="row">
                            <div class="col-7">
                                <h2 class="lead"><b>@item.WriterName @item.WriterSurName</b></h2>
                              
                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                   
                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-comment"></i></span>@item.WriterMail</li>
                                </ul>
                            </div>
                            <div class="col-5 text-center">
                                <img src="@item.WriterImage" alt="pictureofwriter" class="img-circle img-fluid">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                            <a href="#" class="btn btn-sm bg-teal">
                                <i class="fas fa-comments">Yazarın açtığı başlıklar</i>
                            </a>
                            <a href="/Writer/UpdateWriter/@item.WriterID" class="btn btn-sm btn-primary">
                                <i class="fas fa-user"></i> Yazarı Düzenle
                            </a>
                        </div>
                        <br/>
                        <div style="text-align:center">
                        <a href="/Writer/DeleteWriter/@item.WriterID" class="btn btn-danger">Sil</a>
                        </div>
                    </div>
                </div>
            </div>

            }

        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
   
        <a href="/Writer/AddWriter/" class="btn btn-primary">Yeni yazar ekle</a>

    </div>
    <!-- /.card-footer -->
</div>
<!-- /.card -->