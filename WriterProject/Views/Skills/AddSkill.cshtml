@model Entities.Concrete.Skill

@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Ekle</h4>
            <br />
            <br />

            @using (Html.BeginForm("AddSkill", "Skills", FormMethod.Post))
            {


                <div class="form-group">
                    <label>Yetenek Adı</label>
                    @Html.TextBoxFor(m => m.SkillName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SkillName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Yetenek Puanı</label>
                    @Html.TextBoxFor(m => m.SkillOverall, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SkillOverall, "", new { @class = "text-danger" })
                </div>

          
                <button class="btn btn-success">Tanımla</button>

            }


        </div>
    </div>
</div>

