<!DOCTYPE html>
<html>
<head>
    <title>Yeteneklerim</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/Skills_Theme/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="~/AdminLTE-3.0.4/dist/img/ccc.png" />
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/Skills_Theme/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/Skills_Theme/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main">
        <h1>Yeteneklerim Profili</h1>
        <div class="main-info w3l">
            <div class="main-row">
                <!-- main-row-one -->


                <div class="profile-grid logo wthree">
                    <img src="@Model.FirstOrDefault().Writer.WriterImage" alt="Yazar Görseli">
                    <h2>@Model.FirstOrDefault().Writer.WriterName @Model.FirstOrDefault().Writer.WriterSurName</h2>
                    <p>@Model.FirstOrDefault().Writer.WriterDescription</p>

                </div>
                <h3 class="title" style="text-align:center">Yeteneklerim</h3>
                <div class="col-md-6 skills-right bar_group">
                    @foreach (var item in Model)
                    {

                        <p style="color:yellow">Yetenek => @item.SkillName --- Yetenek Yüzdesi : @item.SkillOverall%</p>

                        <a href="/Skills/DeleteSkill/@item.SkillID" style="background-color:darkred;color:white">Yeteneği Sil</a>

                    }
                </div>

                <!--bar-js-->
                <script src="~/Skills_Theme/web/js/bars.js"></script>
                <br />
                <br />
                <a href="/Skills/AddSkill/" style="background-color:darkred;color:white">Yetenek Ekle</a>
                <div class="clear"> </div>
            </div>
        </div>

        <!-- copyright -->
        <div class="copyright">
            <p> © @DateTime.Now.Year E.O - Tüm hakları saklıdır.   W3layouts<a href="http://w3layouts.com/" target="_blank"> tarafından tasarlandı.</a></p>
        </div>
        <!-- //copyright -->
    </div>


    <!-- main -->
</body>
</html>
